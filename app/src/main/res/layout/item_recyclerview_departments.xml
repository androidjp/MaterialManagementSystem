<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="">

    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="@drawable/selector_item_department_leftbar"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/tv_item_departments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="秘书部"
        android:textSize="30sp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/count_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffff"
        android:background="@drawable/shape_backgroud_count_department"
        android:gravity="center"
        android:text="2"
        android:layout_above="@id/tv_item_departments"
        android:layout_toRightOf="@+id/tv_item_departments"
        android:layout_marginTop="5dp"

        />

</RelativeLayout>